<%= form_with model: [:admin, @forum], id: 'forum-form', class: 'form p-4', data: { controller: 'form-validation' } do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control #{'is-invalid' if @forum.errors[:name].any?}", data: { 'validate-url': '/forums/validate/name' } %>
    <% if @forum.errors[:name].any? %>
      <div class="invalid-feedback">
        <%= @forum.errors[:name].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :slug %>
    <%= form.text_field :slug, class: "form-control #{'is-invalid' if @forum.errors[:slug].any?}", data: { 'validate-url': '/forums/validate/slug' } %>
    <% if @forum.errors[:slug].any? %>
      <div class="invalid-feedback">
        <%= @forum.errors[:slug].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', rows: 3 %>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>
