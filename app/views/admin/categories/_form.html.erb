<%= form_with model: [:admin, @category], id: 'category-form', class: 'form p-4', data: { controller: 'form-validation' } do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control #{'is-invalid' if @category.errors[:name].any?}", data: { 'validate-url': '/categorys/validate/name' } %>
    <% if @category.errors[:name].any? %>
      <div class="invalid-feedback">
        <%= @category.errors[:name].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :parent_id %>
    <%= form.collection_select :parent_id, Category.all, :id, :name, { include_blank: true }, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= form.label :slug %>
    <%= form.text_field :slug, class: "form-control #{'is-invalid' if @category.errors[:slug].any?}", data: { 'validate-url': '/categorys/validate/slug' } %>
    <% if @category.errors[:slug].any? %>
      <div class="invalid-feedback">
        <%= @category.errors[:slug].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', rows: 3 %>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>
