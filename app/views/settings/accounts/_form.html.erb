<%= form_with model: @user, url: settings_account_path, id: 'account-form', class: 'form', data: { controller: 'form-validation' } do |form| %>
  <div class="form-field">
    <%= form.label :name %>
    <%= form.text_field :name, 'data-validate-url': '/settings/account/validate/name', autofocus: true %>
    <% if @user.errors[:name].any? %>
      <div class="validate-message">
        <%= @user.errors[:name].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:username].any? %>">
    <%= form.label :username %>
    <%= form.text_field :username, 'data-validate-url': '/settings/account/validate/username' %>
    <% if @user.errors[:username].any? %>
      <div class="validate-message">
        <%= @user.errors[:username].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:email].any? %>">
    <%= form.label :email %>
    <%= form.text_field :email, 'data-validate-url': '/settings/account/validate/email' %>
    <% if @user.errors[:email].any? %>
      <div class="validate-message">
        <%= @user.errors[:email].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:bio].any? %>">
    <%= form.label :bio %>
    <%= form.text_area :bio %>
    <% if @user.errors[:bio].any? %>
      <div class="validate-message">
        <%= @user.errors[:bio].first %>
      </div>
    <% end %>
  </div>
  <%= form.submit 'Update Account', class: 'button button-raised button-primary' %>
<% end %>
