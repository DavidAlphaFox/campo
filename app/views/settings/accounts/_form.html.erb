<%= form_with model: @user, url: settings_account_path, class: 'form', id: 'account-form', data: { controller: 'form-validation' } do |form| %>
  <div class="form-field <%= 'is-invalid' if @user.errors[:name].any? %>">
    <%= form.label :name %>
    <%= form.text_field :name, 'data-validate-url': '/settings/account/validate/name' %>
    <% if @user.errors[:name].any? %>
      <div class="validate-message">
        <%= @user.errors[:name].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'is-invalid' if @user.errors[:username].any? %>">
    <%= form.label :username %>
    <%= form.text_field :username, 'data-validate-url': '/settings/account/validate/username' %>
    <% if @user.errors[:username].any? %>
      <div class="validate-message">
        <%= @user.errors[:username].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'is-invalid' if @user.errors[:email].any? %>">
    <%= form.label :email %>
    <%= form.text_field :email, 'data-validate-url': '/settings/account/validate/email' %>
    <% if @user.errors[:email].any? %>
      <div class="validate-message">
        <%= @user.errors[:email].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'is-invalid' if @user.errors[:email].any? %>">
    <%= form.label :avatar %>
    <div class="mb-2">
      <%= avatar_tag @user %>
    </div>
    <label class="button button-outlined button-primary">
      Select Image
      <%= form.file_field :avatar, accept: 'image/*', class: 'display-none' %>
    </label>
  </div>
  <div class="form-field <%= 'is-invalid' if @user.errors[:bio].any? %>">
    <%= form.label :bio %>
    <%= form.text_area :bio %>
    <% if @user.errors[:bio].any? %>
      <div class="validate-message">
        <%= @user.errors[:bio].first %>
      </div>
    <% end %>
  </div>
  <%= form.submit t('.update_account'), class: 'button button-contained button-primary' %>
<% end %>
