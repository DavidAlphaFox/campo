<%= form_with url: session_path, id: 'sign-in-form', class: 'form' do |form| %>
  <div class="form-field">
    <%= form.label :login, t('.username_or_email') %>
    <%= form.text_field :login, value: params[:login], autofocus: true %>
  </div>
  <div class="form-field <%= 'invalid' if @sign_in_error %>">
    <label for="password">
      <%= t 'common.password' %>
      <a href="/password_reset" class="text-secondary float-right" tabindex="-1"><%= t '.forgot_password' %></a>
    </label>
    <%= form.password_field :password %>
    <% if @sign_in_error %>
      <div class="validate-message">
        <%= t '.incorrect_username_or_password' %>
      </div>
    <% end %>
  </div>
  <%= form.submit t('common.sign_in'), class: 'button button-contained button-primary' %>
<% end %>
