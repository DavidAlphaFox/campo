<div class="toolbar toolbar-fixed toolbar-primary">
  <div class="toolbar-action">
    <a href="/" class="button button-icon"><i class="material-icons">arrow_back</i></a>
  </div>
  <div class="toolbar-title">Sign in</div>
</div>

<main class="main">
  <div class="container">
    <div class="session">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Sign in</h3>
        </div>
        <div class="card-body">
          <%= render 'auth_providers' %>
          <%= form_with url: session_path, class: 'form' do |form| %>
            <div class="form-field">
              <%= form.label :login, 'Username or Email' %>
              <%= form.text_field :login %>
            </div>
            <div class="form-field">
              <label for="password">
                Password
                <a href="/password_reset" class="text-muted float-right">Forgot password?</a>
              </label>
              <%= form.password_field :password %>
            </div>
            <button type="submit" class="button button-raised button-primary">Sign in</button>
            <a href="/users/new" class="button button-flat button-primary float-right">Sign up</a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
