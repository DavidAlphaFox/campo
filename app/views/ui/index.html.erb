<style media="screen">
  section {
    margin-bottom: 48px;
  }

  .demo {
    padding: 24px;
    background: #f5f5f5;
  }

  .demo-row {
    display: flex;
  }

  .demo-column {
    flex-grow: 1;
    margin: 0 8px;
  }

  .demo-column:first-child {
    margin-left: 0;
  }

  .demo-column:last-child {
    margin-right: 0;
  }

  .demo .dialog {
    width: 100%;
  }

  .demo .dialog-container {
    position: relative;
    z-index: 0;
  }

  .demo .dialog-background {
    position: absolute;
  }

  .list-item-avatar img {
    background: #ccc;
  }

  .demo .snackbar {
    position: static;
    width: 288px;
  }
</style>

<div class="appbar appbar-fixed appbar-white">
  <div class="toolbar toolbar-fixed toolbar-white">
    <div class="toolbar-action">
      <button type="button" class="button button-icon" data-toggle="#side-nav"><i class="material-icons">menu</i></button>
    </div>
    <div class="toolbar-title">
      Campo UI
    </div>
  </div>
</div>

<nav id="side-nav" class="side-nav side-nav-permanent" data-controller="side-nav">
  <div class="side-nav-content">
    <div class="list">
      <% %w(buttons forms dropdowns toolbars cards dialogs lists snackbars).each do |name| %>
        <a href="#<%= name %>" class="list-item">
          <div class="list-item-content">
            <%= name.capitalize %>
          </div>
        </a>
      <% end %>
    </div>
  </div>
  <div class="side-nav-background" data-action="click->side-nav#close">
  </div>
</nav>

<main class="main with-appbar">
  <div class="container">
    <section>
      <h3 id="buttons">Buttons</h3>
      <h4 id="raised-buttons">Contained buttons</h4>
      <p>
        <button type="button" class="button button-contained">Default</button>
        <button type="button" class="button button-contained button-primary">Primary</button>
        <button type="button" class="button button-contained button-secondary">Secondary</button>
        <button type="button" class="button button-contained" disabled>Disabled</button>
      </p>
      <h4 id="raised-buttons-link">Contained buttons (Link)</h4>
      <p>
        <a class="button button-contained">Default</a>
        <a class="button button-contained button-primary">Primary</a>
        <a class="button button-contained button-secondary">Secondary</a>
        <a class="button button-contained" disabled>Disabled</a>
      </p>
      <h4 id="flat-buttons">Text buttons</h4>
      <p>
        <button type="button" class="button button-text">Default</button>
        <button type="button" class="button button-text button-primary">Primary</button>
        <button type="button" class="button button-text button-secondary">Secondary</button>
        <button type="button" class="button button-text" disabled>Disabled</button>
      </p>
      <h4 id="flat-buttons-link">Text buttons (Link)</h4>
      <p>
        <a class="button button-text">Default</a>
        <a class="button button-text button-primary">Primary</a>
        <a class="button button-text button-secondary">Secondary</a>
        <a class="button button-text" disabled>Disabled</a>
      </p>
      <h4 id="flat-buttons">Outlined buttons</h4>
      <p>
        <button type="button" class="button button-outlined">Default</button>
        <button type="button" class="button button-outlined button-primary">Primary</button>
        <button type="button" class="button button-outlined button-secondary">Secondary</button>
        <button type="button" class="button button-outlined" disabled>Disabled</button>
      </p>
      <h4 id="flat-buttons-link">Outlined buttons (Link)</h4>
      <p>
        <a class="button button-outlined">Default</a>
        <a class="button button-outlined button-primary">Primary</a>
        <a class="button button-outlined button-secondary">Secondary</a>
        <a class="button button-outlined" disabled>Disabled</a>
      </p>
      <h4 id="floating-buttons">Floating buttons</h4>
      <p>
        <button type="button" class="button button-floating"><i class="material-icons">add</i></button>
        <button type="button" class="button button-floating button-primary"><i class="material-icons">add</i></button>
        <button type="button" class="button button-floating button-secondary"><i class="material-icons">add</i></button>
        <button type="button" class="button button-floating" disabled><i class="material-icons">add</i></button>
      </p>
      <h4 id="floating-buttons-link">Floating buttons (Link)</h4>
      <p>
        <a class="button button-floating"><i class="material-icons">add</i></a>
        <a class="button button-floating button-primary"><i class="material-icons">add</i></a>
        <a class="button button-floating button-secondary"><i class="material-icons">add</i></a>
        <a class="button button-floating" disabled><i class="material-icons">add</i></a>
      </p>
      <h4 id="icon-buttons">Icon buttons</h4>
      <p>
        <button type="button" class="button button-icon"><i class="material-icons">add</i></button>
        <button type="button" class="button button-icon button-primary"><i class="material-icons">add</i></button>
        <button type="button" class="button button-icon button-secondary"><i class="material-icons">add</i></button>
        <button type="button" class="button button-icon" disabled><i class="material-icons">add</i></button>
      </p>
      <h4 id="icon-buttons-link">Floating buttons (Link)</h4>
      <p>
        <a class="button button-icon"><i class="material-icons">add</i></a>
        <a class="button button-icon button-primary"><i class="material-icons">add</i></a>
        <a class="button button-icon button-secondary"><i class="material-icons">add</i></a>
        <a class="button button-icon" disabled><i class="material-icons">add</i></a>
      </p>
    </section>
    <section>
      <h3 id="forms">Forms</h3>
      <form class="form" action="#forms">
        <div class="form-field">
          <label>Textfield</label>
          <input type="text">
        </div>
        <div class="form-row">
          <div class="form-field">
            <label>Column</label>
            <input type="text">
          </div>
          <div class="form-field">
            <label>Column</label>
            <input type="text">
          </div>
        </div>
        <div class="form-field">
          <label>Textarea</label>
          <textarea rows="5"></textarea>
        </div>
        <div class="form-field">
          <label>Select</label>
          <select>
            <option>Option 1</option>
            <option>Option 2</option>
            <option>Option 3</option>
          </select>
        </div>
        <div class="form-field">
          <label>Checkbox</label>
          <label>
            <input type="checkbox">Checkbox 1
          </label>
          <label>
            <input type="checkbox">Checkbox 2
          </label>
          <label>
            <input type="checkbox">Checkbox 3
          </label>
        </div>
        <div class="form-field">
          <label>Radio</label>
          <label>
            <input type="radio" name="radio">Radio 1
          </label>
          <label>
            <input type="radio" name="radio">Radio 2
          </label>
          <label>
            <input type="radio" name="radio">Radio 3
          </label>
        </div>
        <button type="submit" class="button button-contained button-primary">Submit</button>
      </form>
      <h4 id="form-validation">Form validation</h4>
      <form class="form">
        <div class="form-field">
          <label>Textfield</label>
          <input type="text">
          <div class="form-helper">
            Help text.
          </div>
        </div>
        <div class="form-field invalid">
          <label>Textfield</label>
          <input type="text">
          <div class="validate-message">
            Looks not good!
          </div>
        </div>
      </form>
    </section>
    <section>
      <h3 id="dropdowns">Dropdowns</h3>
      <div class="dropdown" data-controller="dropdown">
        <button type="button" class="button button-contained" data-action="dropdown#open">Dropdown button</button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#">Dropdown item</a>
          <a class="dropdown-item" href="#">Dropdown item</a>
          <a class="dropdown-item" href="#">Dropdown item</a>
        </div>
      </div>
      <div class="dropdown" data-controller="dropdown">
        <button type="button" class="button button-contained" data-action="dropdown#open">Menu align right</button>
        <div class="dropdown-menu dropdown-menu-right">
          <a class="dropdown-item" href="#">Dropdown item</a>
          <a class="dropdown-item" href="#">Dropdown item</a>
          <a class="dropdown-item" href="#">Dropdown item</a>
        </div>
      </div>
      <div class="dropdown" data-controller="dropdown">
        <button type="button" class="button button-contained" data-action="dropdown#open">Menu align top</button>
        <div class="dropdown-menu dropdown-menu-top">
          <a class="dropdown-item" href="#">Dropdown item</a>
          <a class="dropdown-item" href="#">Dropdown item</a>
          <a class="dropdown-item" href="#">Dropdown item</a>
        </div>
      </div>
      <div class="dropdown" data-controller="dropdown">
        <button type="button" class="button button-contained" data-action="dropdown#open">Menu align top right</button>
        <div class="dropdown-menu dropdown-menu-top dropdown-menu-right">
          <a class="dropdown-item" href="#">Dropdown item</a>
          <a class="dropdown-item" href="#">Dropdown item</a>
          <a class="dropdown-item" href="#">Dropdown item</a>
        </div>
      </div>
    </section>
    <section>
      <h3 id="toolbars">Toolbars</h3>
      <% %w(white primary secondary).each do |style| %>
        <div class="appbar appbar-<%= style %>">
          <div class="toolbar">
            <div class="toolbar-action">
              <button type="button" class="button button-icon"><i class="material-icons">menu</i></button>
            </div>
            <div class="toolbar-title">
              Title
            </div>
            <div class="toolbar-action">
              <button type="button" class="button button-icon"><i class="material-icons">search</i></button>
            </div>
            <div class="toolbar-action">
              <button type="button" class="button button-icon"><i class="material-icons">notifications</i></button>
            </div>
            <div class="toolbar-action dropdown" data-controller="dropdown">
              <button type="button" class="button button-icon" data-action="dropdown#open"><i class="material-icons">more_vert</i></button>
              <div class="dropdown-menu dropdown-menu-right">
                <a href="#" class="dropdown-item">Item</a>
                <a href="#" class="dropdown-item">Item</a>
                <a href="#" class="dropdown-item">Item</a>
              </div>
            </div>
          </div>
        </div>
        <br>
      <% end %>
      <h4>With tabs</h4>
      <% %w(white primary secondary).each do |style| %>
        <div class="appbar appbar-<%= style %>">
          <div class="toolbar">
            <div class="toolbar-action">
              <button type="button" class="button button-icon"><i class="material-icons">menu</i></button>
            </div>
            <div class="toolbar-title">
              Title
            </div>
            <div class="toolbar-action">
              <button type="button" class="button button-icon"><i class="material-icons">search</i></button>
            </div>
            <div class="toolbar-action">
              <button type="button" class="button button-icon"><i class="material-icons">notifications</i></button>
            </div>
            <div class="toolbar-action dropdown" data-controller="dropdown">
              <button type="button" class="button button-icon" data-action="dropdown#open"><i class="material-icons">more_vert</i></button>
              <div class="dropdown-menu dropdown-menu-right">
                <a href="#" class="dropdown-item">Item</a>
                <a href="#" class="dropdown-item">Item</a>
                <a href="#" class="dropdown-item">Item</a>
              </div>
            </div>
          </div>
          <div class="tab">
            <div class="tab-item active">
              Tab Item
            </div>
            <% 5.times do %>
              <div class="tab-item">
                Tab Item
              </div>
            <% end %>
          </div>
        </div>
        <br>
      <% end %>
    </section>
    <section>
      <h3 id="cards">Cards</h3>
      <div class="demo">
        <div class="demo-row">
          <% 3.times do %>
            <div class="card demo-column">
              <div class="card-header">
                <h3 class="card-title">Card header</h3>
                <div class="dropdown" data-controller="dropdown">
                  <button type="button" class="button button-icon" data-action="dropdown#open"><i class="material-icons">more_vert</i></button>
                  <div class="dropdown-menu dropdown-menu-right">
                    <a href="#" class="dropdown-item">Item</a>
                    <a href="#" class="dropdown-item">Item</a>
                    <a href="#" class="dropdown-item">Item</a>
                  </div>
                </div>
              </div>
              <div class="card-body">
                Content text
              </div>
              <div class="card-footer">
                <button type="button" class="button button-text button-primary">Action 1</button>
                <button type="button" class="button button-text button-primary">Action 2</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
    <section>
      <h3 id="dialogs">Dialogs</h3>
      <div class="demo">
        <div class="dialog open">
          <div class="dialog-container">
            <div class="dialog-content">
              <div class="dialog-header">
                <h4 class="dialog-title">Dialog Title</h4>
                <button type="button" class="button button-icon"><i class="material-icons">close</i></button>
              </div>
              <div class="dialog-body">
                Dialog Content
              </div>
              <div class="dialog-footer">
                <button type="button" class="button button-text button-primary">Action 1</button>
                <button type="button" class="button button-text button-primary">Action 2</button>
              </div>
            </div>
            <div class="dialog-background"></div>
          </div>
        </div>
      </div>
      <h4>Dialog toggle</h4>
      <button type="button" class="button button-contained button-primary" data-toggle="#dialog-demo" data-target="#dialog-demo">Dialog Toggle</button>
      <div id="dialog-demo" class="dialog" data-controller="dialog">
        <div class="dialog-container">
          <div class="dialog-content">
            <div class="dialog-header">
              <h4 class="dialog-title">Dialog Title</h4>
              <button type="button" class="button button-icon" data-action="dialog#close"><i class="material-icons">close</i></button>
            </div>
            <div class="dialog-body">
              <% 50.times do %>
                <p>Long content Long content Long content Long content Long content Long content Long conten Long content Long content Long content Long contentt</p>
              <% end %>
            </div>
            <div class="dialog-footer">
              <button type="button" class="button button-text button-primary">Action 1</button>
              <button type="button" class="button button-text button-primary">Action 2</button>
            </div>
          </div>
          <div class="dialog-background" data-action="click->dialog#close"></div>
        </div>
      </div>
    </section>
    <section>
      <h3 id="lists">Lists</h3>
      <div class="list">
        <% 3.times do %>
          <div class="list-item">
            <div class="list-item-content">
              Single line text...
            </div>
          </div>
        <% end %>
      </div>

      <div class="list">
        <% 3.times do %>
          <div class="list-item">
            <a class="list-item-avatar">
              <img src="" alt="">
            </a>
            <a class="list-item-content">
              <h4 class="list-item-content-primary">Primary text Primary text Primary text Primary text Primary text Primary text Primary text Primary text Primary text </h4>
              <p class="list-item-content-secondary">Secondary text Secondary text Secondary text Secondary text Secondary text Secondary text Secondary text Secondary text </p>
            </a>
            <a class="list-item-icon align-center">
              <i class="material-icons">info</i>
            </a>
          </div>
        <% end %>
      </div>

      <div class="list">
        <% 3.times do %>
          <a href="#lists" class="list-item">
            <div class="list-item-icon">
              <i class="material-icons">info</i>
            </div>
            <div class="list-item-content align-center">
              Item
            </div>
          </a>
        <% end %>
      </div>
    </section>

    <section>
      <h3 id="snackbars">Snackbars</h3>
      <div class="demo">
        <div class="snackbar">
          Snackbar content
        </div>
      </div>
      <h4>Snackbar toggle</h4>
      <button id="toggle-snackbar" type="button" name="button" class="button button-contained button-primary">Snackbar Toggle</button>
      <template id="snackbar-template">
        <div class="snackbar animated fadeInUp" data-controller="snackbar" data-hide-on="5000">
          Snackbar content
        </div>
      </template>
      <script type="text/javascript">
        document.querySelector('#toggle-snackbar').addEventListener('click', function(event) {
          var snackbar = document.importNode(document.querySelector('#snackbar-template').content, true);
          document.querySelector('main').appendChild(snackbar);
        });
      </script>
    </section>
  </div>
</main>
