<div class="appbar appbar-primary appbar-fixed">
  <div class="toolbar">
    <div class="toolbar-action">
      <a href="/" class="button button-icon"><i class="material-icons">arrow_back</i></a>
    </div>
    <div class="toolbar-title">Password Reset</div>
  </div>
</div>

<main class="main with-appbar">
  <div class="container">
    <div class="session">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Reset your password</h3>
        </div>
        <div class="card-body">
          <% if flash[:alert] %>
            <div class="flash flash-alert">
              <%= flash[:alert] %>
            </div>
          <% end %>
          <%= form_with url: password_reset_url, class: 'form' do |form| %>
            <div class="form-field">
              <%= form.label :email, 'Email' %>
              <%= form.text_field :email %>
              <div class="form-helper">
                Enter your email and we will send your a link to reset your password.
              </div>
            </div>
            <button type="submit" class="button button-raised button-primary">Send Email</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
