<%= form_with model: @user, url: password_reset_url(token: params[:token]), class: 'form p-4', id: 'password-reset-form' do |form| %>
  <div class="form-field <%= 'invalid' if @user.errors[:password].any? %>">
    <%= form.label :password, 'Password' %>
    <%= form.password_field :password %>
    <% if @user.errors[:password].any? %>
      <div class="validate-message">
        <%= @user.errors[:password].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:password_confirmation].any? %>">
    <%= form.label :password_confirmation, 'Confirm password' %>
    <%= form.password_field :password_confirmation %>
    <% if @user.errors[:password_confirmation].any? %>
      <div class="validate-message">
        <%= @user.errors[:password_confirmation].first %>
      </div>
    <% end %>
  </div>
  <button type="submit" class="button button-contained button-primary">Change password</button>
<% end %>
