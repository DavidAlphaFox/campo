<%= form_with model: @user, url: password_reset_url(token: params[:token]), id: 'password-reset-form' do |form| %>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control #{'is-invalid' if @user.errors[:passowrd].any?}" %>
    <% if @user.errors[:password].any? %>
      <div class="invalid-feedback">
        <%= @user.errors[:password].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control #{'is-invalid' if @user.errors[:password_confirmation].any?}" %>
    <% if @user.errors[:password_confirmation].any? %>
      <div class="invalid-feedback">
        <%= @user.errors[:password_confirmation].first %>
      </div>
    <% end %>
  </div>
  <%= form.submit t('.change_password'), class: 'btn btn-primary w-100' %>
<% end %>
