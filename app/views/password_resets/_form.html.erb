<%= form_with model: @user, url: password_reset_url(token: params[:token]), class: 'form', id: 'password-reset-form' do |form| %>
  <div class="form-group <%= 'is-invalid' if @user.errors[:password].any? %>">
    <%= form.label :password, 'Password' %>
    <%= form.password_field :password %>
    <% if @user.errors[:password].any? %>
      <div class="valid-message">
        <%= @user.errors[:password].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group <%= 'is-invalid' if @user.errors[:password_confirmation].any? %>">
    <%= form.label :password_confirmation, 'Confirm password' %>
    <%= form.password_field :password_confirmation %>
    <% if @user.errors[:password_confirmation].any? %>
      <div class="valid-message">
        <%= @user.errors[:password_confirmation].first %>
      </div>
    <% end %>
  </div>
  <button type="submit" class="button button-raised button-primary">Change password</button>
<% end %>
