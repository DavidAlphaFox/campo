<% cache [I18n.locale, topic] do %>
<a class="list-item" href="<%= topic_path(topic) %>">
    <div class="list-item-avatar">
      <img src="<%= topic.user.avatar.thumb.url %>" class="avatar">
    </div>
    <div class="list-item-content text-overflow">
      <div class="list-item-content-primary">
        <%= topic.title %>
      </div>
      <div class="list-item-content-secondary">
        <b><%= topic.forum.name %></b>
        Â·
        <span><%= topic.user.name %> created at <%= local_time_or_date topic.created_at %></span>
        <% if topic.posts.count > 1 %>
          Â·
          <span><%= topic.posts.last.user.name %> replied at <%= local_time_or_date topic.posts.last.created_at %></span>
        <% end %>
      </div>
    </div>
    <div class="list-item-meta">
      <small class="text-secondary"><%= topic.posts.count %></small>
    </div>
  </a>
<% end %>
