<% cache [I18n.locale, topic, topic.user] do %>
  <a class="media topic-item rounded" href="<%= topic_path(topic) %>">
    <div class="mr-2">
      <%= avatar_tag topic.user %>
    </div>
    <div class="media-body">
      <h3 class="text-truncate"><%= topic.title %></h3>
      <div class="topic-item-info text-muted">
        <span class="badge badge-light"><%= topic.forum.name %></span>
        <span class="mr-1"><i class="far fa-user"></i> <%= topic.user.name %></span>
        <span class="mr-1"><i class="far fa-comment-alt"></i> <%= topic.comments.count %></span>
      </div>
    </div>
    <div class="ml-2">
      <small class="text-muted"><%= local_time_or_date topic.activated_at %></small>
    </div>
  </a>
<% end %>
