<%= form_with model: @topic, id: 'topic-form', class: 'form', data: { controller: 'editor' } do |form| %>
  <div class="row">
    <div class="form-field col-3">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="form-field col-1">
      <%= form.label :board_id %>
      <%= form.collection_select :board_id, Board.all, :id, :name %>
    </div>
  </div>
  <div class="form-field">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 8, data: { target: 'editor.textarea' } %>
  </div>
  <%= form.submit class: 'button button-raised button-primary' %>
  <label class="button button-icon">
    <i class="material-icons">attach_file</i>
    <input type="file" data-action="editor#attachFile" class="hide">
  </label>
  <button type="button" class="button button-icon" data-action="editor#preview">
    <i class="material-icons">visibility</i>
  </button>
<% end %>
