<div class="card">
  <div class="card-header border-bottom">
    <div class="toolbar">
      <div class="toolbar-title">
        <%= @forum.name %>
      </div>
      <div class="toolbar-space">
      </div>
      <div class="toolbar-action">
        <a href="<%= new_topic_path(forum_id: @forum.id) %>" class="button button-contained button-primary">New Topic</a>
      </div>
    </div>
  </div>

  <%= render 'topics/topic_list' %>

  <% if @topics.empty? %>
    <div class="text-align-center p-4">
      No content.
    </div>
  <% end %>
</div>
