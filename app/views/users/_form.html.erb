<%= form_with model: @user, class: 'form', id: 'sign-up-form', data: { controller: 'form-validation' } do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control #{'is-invalid' if @user.errors[:name].any?}", 'data-validate-url': '/users/validate/name', autofocus: true %>
    <% if @user.errors[:name].any? %>
      <div class="invalid-feedback">
        <%= @user.errors[:name].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group <%= 'invalid' if @user.errors[:username].any? %>">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control #{'is-invalid' if @user.errors[:username].any?}", 'data-validate-url': '/users/validate/username' %>
    <% if @user.errors[:username].any? %>
      <div class="invalid-feedback">
        <%= @user.errors[:username].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group <%= 'invalid' if @user.errors[:email].any? %>">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control #{'is-invalid' if @user.errors[:email].any?}", 'data-validate-url': '/users/validate/email' %>
    <% if @user.errors[:email].any? %>
      <div class="invalid-feedback">
        <%= @user.errors[:email].first %>
      </div>
    <% end %>
  </div>
  <div class="form-group <%= 'invalid' if @user.errors[:password].any? %>">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control #{'is-invalid' if @user.errors[:password].any?}", 'data-validate-url': '/users/validate/name' %>
    <% if @user.errors[:password].any? %>
      <div class="invalid-feedback">
        <%= @user.errors[:password].first %>
      </div>
    <% end %>
  </div>
  <%= form.submit t('common.sign_up'), class: 'btn btn-primary w-100' %>
<% end %>
