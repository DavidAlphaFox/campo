<div class="appbar appbar-primary appbar-fixed">
  <div class="toolbar">
    <div class="toolbar-action">
      <a href="/" class="button button-icon"><i class="material-icons">arrow_back</i></a>
    </div>
    <div class="toolbar-title">Sign up</div>
    <div class="toolbar-action">
      <a href="/session/new" class="button button-text">Sign in</a>
    </div>
  </div>
</div>

<main class="main with-appbar">
  <div class="container">
    <div class="session">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Join us now!</h3>
        </div>
        <div class="card-body">
          <%= render 'sessions/auth_providers' %>
          <% if AUTH_PROVIDERS.include?('password') %>
            <%= render 'form' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
