<div class="toolbar toolbar-fixed toolbar-primary">
  <div class="toolbar-action">
    <a href="/" class="button button-icon"><i class="material-icons">arrow_back</i></a>
  </div>
  <div class="toolbar-title">Sign up</div>
</div>

<main class="main">
  <div class="container">
    <div class="session">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Join us now!</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @user, class: 'form' do |form| %>
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name %>
            </div>
            <div class="form-group">
              <%= form.label :username %>
              <%= form.text_field :username %>
            </div>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.text_field :email %>
            </div>
            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password %>
            </div>
            <button type="submit" class="button button-raised button-primary">Sign up</button>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="list">
          <a href="/session/new" class="list-item">
            <div class="list-item-content align-center">
              Already have account
            </div>
            <div class="list-item-icon">
              <i class="material-icons">chevron_right</i>
            </div>
          </a>
          <a href="/password/new" class="list-item">
            <div class="list-item-content align-center">
              Forgot my password
            </div>
            <div class="list-item-icon">
              <i class="material-icons">chevron_right</i>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</main>
