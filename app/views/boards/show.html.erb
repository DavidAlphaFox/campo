<h2 class="subheader"><%= @board.name %></h2>

<div class="list">
  <% @topics.each do |topic| %>
    <a class="list-item" href="<%= topic_path(topic) %>">
      <div class="list-item-avatar">
        <%= avatar_tag topic.user %>
      </div>
      <div class="list-item-content">
        <h4 class="list-item-content-primary"><%= topic.title %></h4>
        <div class="list-item-content-secondary"><%= truncate topic.content %></div>
      </div>
    </a>
  <% end %>
</div>

<a href="/topics/new" class="button button-floating button-secondary right-bottom"><i class="material-icons">add</i></a>
