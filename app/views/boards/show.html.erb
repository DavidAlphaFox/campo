<% content_for :toolbar_title do %>
  <ul class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="/">Home</a>
    </li>
    <li class="breadcrumb-item active">
      <%= @board.name %>
    </li>
  </ul>
<% end %>

<div id="topics" class="list" data-controller="infinite-page" data-infinite-page="<%= params[:page] || 1 %>" data-infinite-page-url="<%= board_path(@board) %>">
  <%= render @topics %>
</div>
<div class="loading-message">
  <i class="material-icons animated rotate">refresh</i>
</div>

<a href="/topics/new" class="button button-floating button-secondary right-bottom"><i class="material-icons">add</i></a>
