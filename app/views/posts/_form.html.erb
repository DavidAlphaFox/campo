<%= form_with model: post, id: (post.new_record? ? 'new-post-form' : "post-#{post.id}-form"), data: { controller: 'editor' } do |form| %>
  <% if post.new_record? %>
    <%= form.hidden_field :topic_id %>
    <%= form.hidden_field :reply_to_post_id, data: { target: 'editor.replyToInput' }, disabled: post.persisted? %>
  <% end %>

  <div class="form-group mb-2">
    <%= form.text_area :body, rows: 5, data: { target: 'editor.textarea' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>

    <label class="btn btn-light mb-0">
      <i class="fa fa-paperclip"></i>
      <input type="file" name="attachment[file]" accept="image/*" data-action="editor#attachFile" class="d-none">
    </label>
  </div>
<% end %>
