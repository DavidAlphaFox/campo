<% content_for :body do %>
  <div class="appbar appbar-white appbar-fixed">
    <div class="toolbar">
      <div class="toolbar-action">
        <button type="button" class="button button-icon" data-toggle="#drawer">
          <i class="material-icons">menu</i>
        </button>
      </div>
      <div class="toolbar-brand">
        <a href="/">
          <img src="<%= asset_pack_path 'media/images/logo.png' %>" class="logo">
          <b class="ml-2">Campo Admin</b>
        </a>
      </div>
      <div class="toolbar-space">
      </div>
      <div class="toolbar-action">
        <a href="<%= root_path %>" class="button button-icon">
          <i class="material-icons">exit_to_app</i>
        </a>
      </div>
    </div>
  </div>

  <nav id="drawer" class="drawer drawer-permanent" data-controller="drawer">
    <div class="drawer-content">
      <div class="drawer-body">
        <div class="drawer-menu">
          <a href="<%= admin_root_path %>" class="drawer-item <%= 'active' if controller_name == 'dashboard' %>">
            <i class="material-icons">dashboard</i> Dashboard
          </a>
          <a href="<%= admin_forums_path %>" class="drawer-item <%= 'active' if controller_name == 'forums' %>">
            <i class="material-icons">forum</i> Forums
          </a>
          <a href="" class="drawer-item">
            <i class="material-icons">chat_bubble</i> Topics
          </a>
          <a href="" class="drawer-item">
            <i class="material-icons">message</i> Posts
          </a>
          <a href="" class="drawer-item">
            <i class="material-icons">person</i> Users
          </a>
        </div>
      </div>
    </div>
    <div class="drawer-background" data-action="click->drawer#close">
    </div>
  </nav>

  <main class="main with-appbar">
    <div class="container">
      <%= yield %>
    </div>
  </main>
<% end %>

<%= render template: 'layouts/base' %>
